@model ProjetSiteDeRencontre.ViewModel.StatistiqueViewModel

<div class="statistiqueMessagerie">
    @Html.Partial("RechercheParDateStatPartial")

    <div class="affichageStatistiques">
        <h3>Nombre de messages envoyés dans cette période:</h3>
        <p>@Model.nbMessagesEnvoyes messages</p>

        <h3>Nombre de cadeaux envoyés dans cette période:</h3>
        <p>@Model.nbCadeauxEnvoyes cadeaux</p>
    </div>
</div>
